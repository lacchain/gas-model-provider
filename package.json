{
	"name": "@lacchain/gas-model-provider",
	"version": "1.2.0",
	"description": "Ethers.js LAC-NET Gas Model provider",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"test:e2e": "jest --config jest.config.e2e.js",
		"test:watch": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lacchain/gas-model-provider.git"
	},
	"keywords": [
		"LACChain",
		"LAC-NET",
		"Gas-Model"
	],
	"author": "Sergio Ceron Figueroa",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/lacchain/gas-model-provider/issues"
	},
	"homepage": "https://github.com/lacchain/gas-model-provider#readme",
	"devDependencies": {
		"@types/jest": "^29.5.10",
		"dotenv": "^16.3.1",
		"jest": "^29.7.0",
		"prettier": "^3.1.0",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"files": [
		"dist/**/*"
	],
	"dependencies": {
		"ethers": "^6.9.0"
	}
}
